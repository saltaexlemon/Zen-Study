<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/olivegreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_timer_text"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:id="@+id/setTimerText">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setTimerText"
        android:id="@+id/timerProgress"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_margin="10dp">
    </TextView>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/timerSlider"
        android:max="35"
        android:progress="6"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/timerProgress">
    </SeekBar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/red"
        android:layout_below="@+id/timerSlider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="@string/start_button"
        android:textSize="20sp"
        android:id="@+id/startTimerButton">
    </Button>

</RelativeLayout>